generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============= USER MANAGEMENT =============

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  passwordHash  String?
  name          String?
  image         String?
  role          UserRole  @default(USER)

  // 2FA
  twoFactorEnabled Boolean @default(false)
  twoFactorSecret  String?

  // Relations
  accounts    Account[]
  sessions    Session[]
  licenses    License[]
  payments    Payment[]
  downloads   DownloadLog[]
  proxyOrders ProxyOrder[]
  proxies     UserProxy[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum UserRole {
  USER
  ADMIN
}

// NextAuth.js required models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============= LICENSE MANAGEMENT =============

model License {
  id     String        @id @default(cuid())
  key    String        @unique // SNAPRO-XXXX-YYYY-ZZZZ
  type   LicenseType   @default(PRO)
  status LicenseStatus @default(PENDING)

  // Ownership
  userId String?
  user   User?   @relation(fields: [userId], references: [id])

  // Validity
  activatedAt    DateTime?
  expiresAt      DateTime?
  durationMonths Int       @default(12)

  // Tracking
  machineId       String?
  lastValidated   DateTime?
  validationCount Int       @default(0)

  // Relations
  payment   Payment? @relation(fields: [paymentId], references: [id])
  paymentId String?  @unique

  // Admin notes
  notes     String?
  createdBy String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum LicenseType {
  FREE
  PRO
  LIFETIME
}

enum LicenseStatus {
  PENDING
  ACTIVE
  EXPIRED
  REVOKED
  SUSPENDED
}

// ============= PAYMENT MANAGEMENT =============

model Payment {
  id String @id @default(cuid())

  // User
  userId String
  user   User   @relation(fields: [userId], references: [id])

  // Amount
  amount   Decimal @db.Decimal(10, 2)
  currency String  @default("USD")

  // Payment method
  provider     PaymentProvider
  providerTxId String?

  // Status
  status PaymentStatus @default(PENDING)

  // Product
  productType ProductType
  productName String

  // License generated
  license License?

  // Metadata
  metadata Json?

  // Invoice
  invoiceUrl    String?
  invoiceNumber String? @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum PaymentProvider {
  STRIPE
  PAYPAL
  NOWPAYMENTS
  MANUAL
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
  CANCELLED
}

enum ProductType {
  PRO_MONTHLY
  PRO_ANNUAL
  PRO_LIFETIME
  PROXY_STARTER
  PROXY_GROWTH
  PROXY_SCALE
  PROXY_ENTERPRISE
}

// ============= DOWNLOADS =============

model SoftwareRelease {
  id           String   @id @default(cuid())
  version      String   @unique
  releaseNotes String   @db.Text
  fileName     String
  fileSize     Int
  checksum     String

  isLatest   Boolean     @default(false)
  isBeta     Boolean     @default(false)
  minLicense LicenseType @default(FREE)

  downloadCount Int           @default(0)
  downloads     DownloadLog[]

  releasedAt DateTime @default(now())
  createdAt  DateTime @default(now())
}

model DownloadLog {
  id String @id @default(cuid())

  userId String?
  user   User?   @relation(fields: [userId], references: [id])

  releaseId String
  release   SoftwareRelease @relation(fields: [releaseId], references: [id])

  ipAddress String?
  userAgent String?

  createdAt DateTime @default(now())
}

// ============= PRICING PLANS =============

model PricingPlan {
  id          String      @id @default(cuid())
  name        String
  productType ProductType @unique

  price    Decimal @db.Decimal(10, 2)
  currency String  @default("USD")

  // Stripe
  stripePriceId String?

  // Features
  features String[]

  isActive  Boolean @default(true)
  sortOrder Int     @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ============= PROXY MANAGEMENT =============

model ProxyPackage {
  id          String    @id @default(cuid())
  name        String
  slug        String    @unique
  description String?

  // Package contents
  staticResidentialCount Int      // Number of static residential proxies
  rotatingMobileGB       Decimal  @db.Decimal(10, 2) // GB of rotating mobile data
  unlimitedRotating      Boolean  @default(false)

  // Pricing
  price         Decimal @db.Decimal(10, 2)
  currency      String  @default("USD")
  billingPeriod String  @default("monthly") // monthly, yearly

  // Stripe
  stripePriceId String?

  // UI
  isPopular Boolean @default(false)
  features  String[]
  sortOrder Int     @default(0)
  isActive  Boolean @default(true)

  // Relations
  orders ProxyOrder[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ProxyOrder {
  id String @id @default(cuid())

  // User
  userId String
  user   User   @relation(fields: [userId], references: [id])

  // Package
  packageId String
  package   ProxyPackage @relation(fields: [packageId], references: [id])

  // Status
  status ProxyOrderStatus @default(PENDING)

  // Validity
  startDate  DateTime?
  expiresAt  DateTime?

  // Payment
  amount       Decimal         @db.Decimal(10, 2)
  currency     String          @default("USD")
  provider     PaymentProvider
  providerTxId String?

  // Assigned proxies
  proxies UserProxy[]

  // Usage tracking for rotating
  rotatingDataUsedGB Decimal @default(0) @db.Decimal(10, 2)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ProxyOrderStatus {
  PENDING
  ACTIVE
  EXPIRED
  CANCELLED
  REFUNDED
}

model UserProxy {
  id String @id @default(cuid())

  // Ownership
  userId  String
  user    User       @relation(fields: [userId], references: [id])
  orderId String
  order   ProxyOrder @relation(fields: [orderId], references: [id])

  // Proxy type
  type ProxyType

  // Connection details
  host     String
  port     Int
  username String
  password String

  // For rotating proxies
  rotatingEndpoint String? // Special endpoint for rotating

  // Status
  isActive  Boolean   @default(true)
  expiresAt DateTime?

  // Usage stats
  lastUsed   DateTime?
  totalUsage Int       @default(0) // requests count

  // Metadata
  country   String?
  city      String?
  isp       String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, type])
}

enum ProxyType {
  STATIC_RESIDENTIAL
  ROTATING_MOBILE
}
